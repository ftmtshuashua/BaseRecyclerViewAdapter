<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/view_Menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--set,add,insert,remove,move-->

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/view_Clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clear" />

            <Button
                android:id="@+id/view_ClearSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clearSearch" />

            <Button
                android:id="@+id/view_Set5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set(5)" />

            <Button
                android:id="@+id/view_S_Set5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S_Set(5)" />

            <Button
                android:id="@+id/view_Set10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set(10)" />

            <Button
                android:id="@+id/view_S_Set10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S_Set(10)" />

            <Button
                android:id="@+id/view_Add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add(1)" />

            <Button
                android:id="@+id/view_S_Add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S_Add(1)" />

            <Button
                android:id="@+id/view_Add2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add(2)" />

            <Button
                android:id="@+id/view_S_Add2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S_Add(2)" />

            <Button
                android:id="@+id/view_Insert1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert(1,1)" />

            <Button
                android:id="@+id/view_S_Insert1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S_Insert(1,1)" />

            <Button
                android:id="@+id/view_Insert1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert(1,2)" />

            <Button
                android:id="@+id/view_S_Insert1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S_Insert(1,2)" />

            <Button
                android:id="@+id/view_Remove0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove(0)" />

            <Button
                android:id="@+id/view_S_Remove0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S_Remove(0)" />

            <Button
                android:id="@+id/view_Move1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move(1,3)" />

            <Button
                android:id="@+id/view_S_Move1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S_Move(1,3)" />
        </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_RecyclerView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/view_Menu"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>