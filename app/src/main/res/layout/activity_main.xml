<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView android:id="@+id/view_Menu" android:paddingRight="3dp" android:paddingLeft="3dp"
                android:layout_width="wrap_content" android:layout_height="match_parent">

        <!--set,add,insert,remove,move-->

        <LinearLayout android:orientation="vertical" android:layout_width="120dp" android:gravity="center_horizontal"
                      android:layout_height="match_parent">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="clear"  android:id="@+id/view_Clear"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="clearSearch"  android:id="@+id/view_ClearSearch"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Set(5)"  android:id="@+id/view_Set5"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="S_Set(5)"  android:id="@+id/view_S_Set5"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Set(10)"  android:id="@+id/view_Set10"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="S_Set(10)"  android:id="@+id/view_S_Set10"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Add(1)"  android:id="@+id/view_Add1"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="S_Add(1)"  android:id="@+id/view_S_Add1"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Add(2)"  android:id="@+id/view_Add2"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="S_Add(2)"  android:id="@+id/view_S_Add2"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Insert(1,1)"  android:id="@+id/view_Insert1_1"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="S_Insert(1,1)"  android:id="@+id/view_S_Insert1_1"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Insert(1,2)"  android:id="@+id/view_Insert1_2"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="S_Insert(1,2)"  android:id="@+id/view_S_Insert1_2"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Remove(0)"  android:id="@+id/view_Remove0"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="S_Remove(0)"  android:id="@+id/view_S_Remove0"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Move(1,3)"  android:id="@+id/view_Move1_3"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="S_Move(1,3)"  android:id="@+id/view_S_Move1_3"/>
        </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@+id/view_Menu"
            android:id="@+id/view_RecyclerView"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>